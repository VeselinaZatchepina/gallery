<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="horizontal"
    android:padding="@dimen/dialog_save_photo_linear_padding">

    <Button
        android:id="@+id/cancelPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dialog_save_photo_cancel_btn_margin_end"
        android:background="@drawable/button_circle_border"
        android:text="@string/dialog_save_photo_cancel_btn_text"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/savePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_circle_border"
        android:text="@string/dialog_save_photo_save_btn_text"
        android:textColor="@color/colorAccent"/>

</LinearLayout>